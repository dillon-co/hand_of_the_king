        <!-- Three columns of text below the carousel -->
      <div class="row">
        <div class="col-lg-4 product-div jumbotron panel">      
          <h4>1 Credit</h4>
          <p>$7.99</p>
          <p><%= link_to "Purchase", new_charge_path(credits: 1, amount:799), class: 'btn btn-primary' %></p>
        </div><!-- /.col-lg-4 product-div jumbotron panel -->
        <div class="col-lg-4 mid-product-div jumbotron panel ">
          <h1>3 Credits</h1>
          <h5>$19.97</h5>
          <p><%= link_to "Purchase", new_charge_path(credits: 3, amount:1997), class: 'btn btn-lg btn-primary' %></p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4 product-div jumbotron panel">
          <h4>10 Credits</h4>
          <p>$49.97</p>
          <p><%= link_to "Purchase", new_charge_path(credits: 10, amount:4997), class: 'btn btn-primary' %></p>
        </div><!-- /.col-lg-4 product-div -->
      </div><!-- /.row -->
    </div>
<% else %>
    <div class="container marketing">
        <!-- Three columns of text below the carousel -->
