<div class="row">
  <div class='col-lg-10'>
    <br>
    <h1>Jobs We Found</h1>
    <h3 class='subtitle'><%= @job_applications.count %> Jobs Available!</h3>
  </div>

  <div class='col-lg-2'>
    <br>
    <h4><%= @job_link.user.credits %> Credits!</h4>
  </div>  
</div>

<br>
<br>
<div class="">
  <%= form_for @job_link do |f| %>
    <div class=''>
     <% if @job_link.user.credits <= 1 %>
      <h4>Apply To All With 1 Credit</h4> 
      <%= link_to "Get Credits", price_page_path, class:'btn btn-lg btn-primary' %> 
     <% else %> 
       <%= f.submit "Apply To Selected", class: 'btn btn-lg btn-primary' %>
     <% end %>  
    </div>
    <br>
    <br> 
     <% @job_applications.each  do |job| %>
       <%= f.fields_for "job[]", job do |job_field| %>
        <div>
         <span class='col-lg-11'>
           <h4 class='title'><%= job.title != '' ? job.title : job.job_link.job_title.titleize %></h4>
           <h6><%= job.company %>; <%= job.location %></h6>
           <p><%= link_to "Description on Indeed.com", job.indeed_link, class: 'subtitle' %></p>
         </span>
          <span class='col-lg-1'><%= job_field.check_box :should_apply, {checked: true} %></span>
        </div>
          <br>
          <br>
          <br>
          <br>
          <hr>
           
       <% end %>
     <% end %>
  <% end %>   
</div>

