<div class='col-lg-10'>
  <br>
  <h1>Jobs You've Applied To</h1>
</div>

<br>
<br>
<div class="container">
 
    <div class='col-lgl-2'>
     <%#= f.submit "Apply To Selected", class: 'btn btn-primary' %>
    </div>
    <br>
    <br> 
     <% @job_applications.each  do |job| %>
        <div>
         <span class='col-lg-11'>
           <h4><%= job.title != '' ? job.title : job.job_link.job_title.titleize %></h4>
           <h6><%= job.company %>; <%= job.location %></h6>
         </span>
          
        </div>
          <br>
          <br>
          <hr>
           

     <% end %>
</div>

